<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color6"
    android:id="@+id/r1"
    tools:context=".EmiActivity">

    <TextView
        android:id="@+id/t1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Compund Interest Calculator"
        android:textSize="25dp"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/e1"
        android:hint="Principle Amount"
        android:layout_below="@+id/t1"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/e2"
        android:hint="Rate of Interest(p.a)"
        android:layout_below="@+id/e1"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/e3"
        android:hint="period in months"
        android:layout_below="@+id/e2"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/freq"
        android:text="Compound Frequency :"
        android:layout_below="@+id/e3"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/l6"
        android:layout_below="@+id/freq"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/c1"

                android:text="Monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/c2"
                android:text="Quarterly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/c3"
                android:text="Half-Yearly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/c4"

                android:text="Yearly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/r2"
        android:background="@color/color7"
        android:layout_below="@+id/l6"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/l1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t2"
                android:textSize="20dp"
                android:text="Monthly EMI : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/t3"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:text="0.00 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l2"
            android:layout_below="@+id/l1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t4"
                android:textSize="20dp"
                android:text="Total Interest : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/t5"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:text="0.00 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l3"
            android:layout_below="@+id/l2"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t6"
                android:textSize="20dp"
                android:text="Total payment : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/t7"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:text="0.00 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/l4"
        android:orientation="horizontal"
        android:layout_below="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/b1"
            android:textSize="20dp"
            android:background="@drawable/custom_button"
            android:text="RESET"
            android:textColor="@color/color7"
            android:layout_margin="20dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/b2"
            android:background="@drawable/custom_button"
            android:textColor="@color/color7"
            android:layout_margin="20dp"

            android:textSize="20dp"
            android:text="CALCULATE"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>